<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Store</title>
    <style>
        body {
            font-family: 'Poppins', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f3f4f6;
            color: #333;
        }

        h2 {
            text-align: center;
            color: #34495e;
            margin: 20px 0;
            font-weight: 600;
        }

        h2 p {
            display: inline;
            color: #3498db;
            font-weight: bold;
        }

        form {
            width: 50%;
            margin: 20px auto;
            padding: 20px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        form input {
            width: calc(100% - 20px);
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
        }

        form button {
            width: 100%;
            padding: 12px;
            background: #2ecc71;
            color: white;
            font-size: 16px;
            font-weight: 600;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        form button:hover {
            background: #27ae60;
        }

        div {
            width: 80%;
            margin: 30px auto;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
        }

        div > div {
            background: #fff;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        div > div:hover {
            transform: translateY(-5px);
        }

        div img {
            width: 90%;
            height: 300px;
            object-fit: cover;
            border-radius: 8px;
        }

        div p {
            margin: 10px 0;
            font-size: 14px;
            line-height: 1.5;
        }

        div p.name {
            font-size: 16px;
            font-weight: bold;
            color: black;
        }

        div button {
            margin-top: 10px;
            padding: 10px;
            background: #e74c3c;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        div button a {
            text-decoration: none;
            color: white;
            font-weight: 600;
        }

        div button:hover {
            background: #c0392b;
        }

        div button:last-child {
            background: #3498db;
        }

        div button:last-child:hover {
            background: #2980b9;
        }
    </style>
</head>

<body>
    <h2>Add <p>Book</p></h2>

    <form action="/addData" method="post" enctype="multipart/form-data">
        <input hidden type="text" style="display: none;" placeholder="Enter Book Id" name="id">

        <input type="file" placeholder="Enter Book Image URL" name="image">

        <input type="text" placeholder="Enter Book Name" name="name">

        <input type="text" placeholder="Enter Author Name" name="author">
        
        <input type="text" placeholder="Enter Language" name="language">

        <input type="text" placeholder="Enter Book Price" name="price">

        <button type="submit">Add Data</button>
    </form>

    <h2><p>Book Store</p></h2>
    <div>
        <% data.map((e, i) => { %>
            <div>
                <img src="<%= e.image %>" alt="Book Image">
                <p class="name">Book Name:- <%= e.name %></p>
                <p>Author:- <b><%= e.author %></b></p>
                <p>Price:- <b><%= e.price %></b></p>
                <p>language:- <b><%= e.language %></b></p>
                <button><a href="/editData?id=<%= e.id %>">Edit Data</a></button>
                <button><a href="/deleteData?id=<%= e.id %>">Delete Data</a></button>
            </div>
        <% }) %>
    </div>
</body>
</html>
